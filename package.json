{
  "name": "zeitgeist-squid",
  "private": "true",
  "version": "0.0.1",
  "description": "Zeitgeist chain block indexer and graphql server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "codegen": "npx sqd codegen",
    "db:up": "docker-compose up -d db",
    "db:create": "npx sqd db create",
    "db:drop": "npx sqd db drop",
    "db:create-migration": "rm -rf db/migrations/* && yarn db:reset && npx sqd db create-migration init && yarn db:migrate",
    "db:migrate": "yarn build && npx sqd db migrate",
    "db:revert": "npx sqd db revert",
    "db:reset": "yarn db:drop && yarn db:create",
    "indexer:local": "./scripts/run_indexer.sh --with-local-node",
    "indexer:testnet": "docker-compose -f indexer/docker-compose.yml -f indexer/docker-compose.testnet.yml up -d",
    "processor:deploy": "yarn db:up && yarn redis:up && yarn db:reset && yarn db:migrate && yarn processor:start",
    "processor:migrate": "echo skip",
    "processor:start": "yarn build && node -r dotenv/config lib/processor/index.js",
    "processor:start:local": "./scripts/run_processor_local.sh",
    "query-node:start": "squid-graphql-server",
    "redis:up": "docker-compose up -d redis",
    "typegen": "squid-substrate-typegen typegen.json"
  },
  "dependencies": {
    "@subsquid/graphql-server": "^0.1.4",
    "@subsquid/ss58": "^0.0.4",
    "@subsquid/substrate-processor": "^0.3.0",
    "@types/redis": "^2.8.27",
    "@zeitgeistpm/sdk": "^0.5.0",
    "@zeitgeistpm/types": "npm:@zeitgeistpm/types@^0.5.0",
    "dotenv": "^16.0.0",
    "ipfs-http-client": "^49.0.4",
    "it-all": "^1.0.4",
    "mem-fs": "^1.2.0",
    "mem-fs-editor": "^8.1.2",
    "redis": "^3.0.2",
    "tslib": "^2.0.0",
    "typeorm": "^0.2.41",
    "uint8arrays": "^2.1.4"
  },
  "devDependencies": {
    "@subsquid/cli": "^0.1.2",
    "@subsquid/substrate-metadata-explorer": "^0.0.7",
    "@subsquid/substrate-typegen": "^0.2.1",
    "decimal.js": "^10.3.1",
    "dotenv-expand": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "4.3.4"
  }
}
