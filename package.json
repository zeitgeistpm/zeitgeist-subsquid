{
  "name": "zeitgeist-squid",
  "private": true,
  "version": "0.0.1",
  "description": "Zeitgeist chain block indexer and graphql server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "api:start": "squid-graphql-server --subscriptions",
    "api:stop": "./scripts/deploy/api.sh stop",
    "archive:start": "./scripts/deploy/archive.sh local up",
    "archive:stop": "./scripts/deploy/archive.sh local down",
    "build": "rm -rf lib && tsc",
    "codegen": "npx squid-typeorm-codegen",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "migration:apply": "squid-typeorm-migration apply",
    "migration:generate": "squid-typeorm-migration generate",
    "migration:revert": "npx squid-typeorm-migration revert",
    "processor:main": "sh scripts/deploy/processor.sh main start",
    "processor:stop": "sh scripts/deploy/processor.sh stop",
    "processor:test": "sh scripts/deploy/processor.sh test start",
    "squid:mac:start": "yarn archive:start && sh scripts/deploy/processor.sh mlocal start && sh scripts/deploy/api.sh mlocal start",
    "squid:start": "yarn archive:start && sh scripts/deploy/processor.sh local start && sh scripts/deploy/api.sh local start",
    "squid:stop": "yarn archive:stop && yarn api:stop && yarn db:down && yarn processor:stop",
    "typegen": "squid-substrate-typegen typegen.json"
  },
  "dependencies": {
    "@subsquid/graphql-server": "3.3.2",
    "@subsquid/ss58": "^0.1.4",
    "@subsquid/substrate-processor": "2.4.1",
    "@subsquid/typeorm-codegen": "0.3.3",
    "@subsquid/typeorm-migration": "0.1.6",
    "@subsquid/typeorm-store": "0.2.2",
    "@types/redis": "^2.8.27",
    "@zeitgeistpm/sdk": "^0.9.1",
    "axios": "^1.2.5",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.0",
    "ipfs-http-client": "^49.0.4",
    "it-all": "^1.0.4",
    "mem-fs": "^1.2.0",
    "mem-fs-editor": "^8.1.2",
    "redis": "^3.0.2",
    "tslib": "^2.0.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.3.12",
    "uint8arrays": "^2.1.4"
  },
  "devDependencies": {
    "@subsquid/cli": "2.1.3",
    "@subsquid/substrate-metadata-explorer": "1.1.2",
    "@subsquid/substrate-typegen": "2.2.1",
    "decimal.js": "^10.3.1",
    "dotenv-expand": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "4.3.4"
  }
}
