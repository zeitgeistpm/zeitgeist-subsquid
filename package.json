{
  "name": "zeitgeist-squid",
  "private": "true",
  "version": "0.0.1",
  "description": "Zeitgeist chain block indexer and graphql server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "archive:start": "./scripts/archive.sh local up",
    "archive:stop": "./scripts/archive.sh local down",
    "build": "rm -rf lib && tsc",
    "codegen": "npx squid-typeorm-codegen",
    "db:create": "npx squid-typeorm-migration create",
    "db:create-migration": "rm -rf db/migrations/* && yarn db:reset && npx squid-typeorm-migration create-migration init && yarn db:migrate",
    "db:drop": "npx squid-typeorm-migration drop",
    "db:migrate": "yarn build && npx squid-typeorm-migration apply",
    "db:reset": "yarn db:drop && yarn db:create",
    "db:revert": "npx squid-typeorm-migration revert",
    "db:up": "docker-compose up -d db",
    "processor:dev:resume": "./scripts/processor.sh dev resume",
    "processor:dev:start": "./scripts/processor.sh dev start",
    "processor:migrate": "echo skip",
    "processor:local:resume": "./scripts/processor.sh local resume",
    "processor:local:start": "./scripts/processor.sh local start",
    "processor:stop": "./scripts/processor.sh stop",
    "query-node:dev:start": "./scripts/query-node.sh dev start",
    "query-node:local:start": "./scripts/query-node.sh local start",
    "query-node:stop": "./scripts/query-node.sh stop",
    "redis:up": "docker-compose up -d redis",
    "squid:start": "yarn archive:start && yarn processor:local:start && yarn query-node:local:start",
    "squid:stop": "yarn archive:stop && docker-compose down && yarn query-node:stop",
    "typegen": "squid-substrate-typegen typegen.json",
    "runner": "yarn db:up && yarn redis:up && yarn db:migrate && yarn build && NODE_ENV=local node lib/processor.js"
  },
  "dependencies": {
    "@subsquid/graphql-server": "^2.1.0",
    "@subsquid/ss58": "^0.1.0",
    "@subsquid/substrate-processor": "^1.7.0",
    "@subsquid/typeorm-codegen": "^0.1.1",
    "@subsquid/typeorm-migration": "^0.1.2",
    "@subsquid/typeorm-store": "^0.1.2",
    "@types/redis": "^2.8.27",
    "@zeitgeistpm/sdk": "^0.5.0",
    "@zeitgeistpm/types": "npm:@zeitgeistpm/types@^0.5.0",
    "dotenv": "^16.0.0",
    "ipfs-http-client": "^49.0.4",
    "it-all": "^1.0.4",
    "mem-fs": "^1.2.0",
    "mem-fs-editor": "^8.1.2",
    "redis": "^3.0.2",
    "tslib": "^2.0.0",
    "typeorm": "^0.3.9",
    "uint8arrays": "^2.1.4"
  },
  "devDependencies": {
    "@subsquid/cli": "^0.6.0",
    "@subsquid/substrate-metadata-explorer": "^1.0.6",
    "@subsquid/substrate-typegen": "^1.2.2",
    "decimal.js": "^10.3.1",
    "dotenv-expand": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "4.3.4"
  }
}
