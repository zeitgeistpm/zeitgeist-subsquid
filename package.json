{
  "name": "zeitgeist-squid",
  "private": true,
  "version": "0.0.1",
  "description": "Zeitgeist chain block indexer and graphql server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "api:start": "squid-graphql-server --subscriptions --max-root-fields 5 --max-response-size 50000 --max-request-size 4096",
    "api:stop": "./scripts/deploy/api.sh stop",
    "build": "rm -rf lib && tsc",
    "codegen": "npx squid-typeorm-codegen",
    "indexer:up": "yarn migration:apply && node lib/main.js",
    "indexer:start:local": "NODE_ENV=local docker-compose up -d",
    "indexer:start:main": "NODE_ENV=main docker-compose up -d",
    "indexer:start:test": "NODE_ENV=test docker-compose up -d",
    "indexer:restart": "docker-compose down && docker-compose up -d",
    "indexer:rebuild:local": "NODE_ENV=local docker-compose down && docker-compose up -d --build",
    "indexer:rebuild:test": "NODE_ENV=test docker-compose down && docker-compose up -d --build",
    "indexer:rebuild:main": "NODE_ENV=main docker-compose down && docker-compose up -d --build",
    "migration:apply": "squid-typeorm-migration apply",
    "migration:generate": "squid-typeorm-migration generate",
    "migration:revert": "npx squid-typeorm-migration revert",
    "typegen": "squid-substrate-typegen typegen.json"
  },
  "dependencies": {
    "@subsquid/archive-registry": "^3.3.0",
    "@subsquid/big-decimal": "^1.0.0",
    "@subsquid/graphql-server": "^4.11.0",
    "@subsquid/ss58": "^2.0.1",
    "@subsquid/substrate-processor": "^8.1.1",
    "@subsquid/substrate-runtime": "^2.0.1",
    "@subsquid/typeorm-migration": "^1.2.2",
    "@subsquid/typeorm-store": "^1.2.3",
    "@types/redis": "^2.8.27",
    "@zeitgeistpm/sdk": "^0.9.1",
    "axios": "^1.2.5",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "graphql": "^15.10.1",
    "ipfs-http-client": "^49.0.4",
    "is-hexadecimal": "^2.0.1",
    "it-all": "^1.0.4",
    "lodash": "^4.17.21",
    "mem-fs": "^1.2.0",
    "mem-fs-editor": "^8.1.2",
    "nedb-promises": "4.1.3",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.0.0",
    "type-graphql": "^1.2.0-rc.1",
    "typeorm": "^0.3.17",
    "uint8arrays": "^2.1.4"
  },
  "devDependencies": {
    "@subsquid/cli": "3.0.4",
    "@subsquid/substrate-metadata-explorer": "^3.1.1",
    "@subsquid/substrate-typegen": "^8.0.1",
    "@subsquid/typeorm-codegen": "^2.0.2",
    "@types/node": "^18.18.0",
    "@types/ws": "^8.5.4",
    "decimal.js": "^10.3.1",
    "dotenv-expand": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "~5.2.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
